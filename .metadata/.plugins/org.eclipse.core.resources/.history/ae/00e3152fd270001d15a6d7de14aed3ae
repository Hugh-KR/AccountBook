<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="account">
<select id ="deposit" parameterType="accountVO" resultType="accountVO">
	select DATE(paydate), sum(amount) from accountbook where payselect = '수입' group by date(paydate) order by date(paydate) asc
</select> <!-- 입금 -->


<select id="withdraw" parameterType="accountVO" resultType="accountVO">
	select DATE(paydate), sum(amount) from accountbook where payselect = '지출' group by date(paydate) order by date(paydate) asc
</select> <!-- 출금 -->
</mapper>