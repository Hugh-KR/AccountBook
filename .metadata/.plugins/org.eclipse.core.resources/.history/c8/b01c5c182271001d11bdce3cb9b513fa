<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="account">

<select id ="" resultType="accountVO">
	select DATE(paydate), sum(if(payselect='수입',amount,0)) as deposit, sum(if(payselect='지출',amount,0)) as withdraw from accountbook group by date(paydate) order by today asc
</select> <!-- 입금 -->



</mapper>