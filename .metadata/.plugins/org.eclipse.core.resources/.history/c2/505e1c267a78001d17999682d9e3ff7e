<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="account">

<select id ="statistics" resultType="accountVO"> <!-- 입금, 출금 합계 -->
	select paydate, sum(if(payselect='수입',amount,0)) as deposit, sum(if(payselect='지출',amount,0)) as withdraw from accountbook group by paydate order by paydate asc
</select>

<select id = "daylist" parameterType="accountVO"  resultType="accountVO">
	select * from accountbook where paydate = #{paydate}
</select>
<select id = "yeah" resultType="accountVO">
	select * from accountbook
</select>
</mapper>